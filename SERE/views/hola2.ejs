                                        <hr>
                                        <table class="table table-striped table-responsive-md table-striped-columns">
                                            <!-- Ajustes en la tabla para que sea responsiva -->
                                            <thead>
                                                <tr class="table-dark">
                                                    <th>Descripción</th>
                                                    <th>Monto</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>Monto Total de Deuda</td>
                                                    <td>$ <%= totalDeuda.toFixed(2) %>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Monto sin IVA (16%)</td>
                                                    <td>$ <%= montoSinIVA.toFixed(2) %>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <br><br>
