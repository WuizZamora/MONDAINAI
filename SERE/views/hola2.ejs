                                        <% if (['AD', 'AM' ].includes(IDPerfil) || RFC===AbogadoAsistente ||
                                            RFC===AbogadoResponsable) { %>
                                            <form id="costos-form" enctype="multipart/form-data">
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <label for="CostoHonorario">Tipo de Costo/Honorario:</label>
