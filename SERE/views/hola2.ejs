<body>
    <%- include('partials/NavMondainaiSere') %>
    <!-- <div id="header"></div> -->
    <div class="container text-center">
        <%- include('partials/NavSere') %>
            <div class="row">
                <% if (TipoDeCaso==='Cuenta Incobrable' ) { %>
                    <h2>CUENTA INCOBRABLE</h2>
                    <hr>
                    <% if (['AD', 'AM' ].includes(IDPerfil) || RFC===AbogadoAsistente || RFC===AbogadoResponsable) { %>
                        <form id="form-incobrabilidad" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="Formato">ADJUNTA FORMATO / CARTA DE INCOBRABILIDAD:</label>
                                    <input type="file" id="Formato" name="Formato" class="form-control text-center"
                                        required>
                                </div>
                                <div class="col-md-6">
                                    <label for="ComentariosFormato">COMENTARIOS:</label>
                                    <textarea name="ComentariosFormato" id="ComentariosFormato" maxlength="450"
                                        class="form-control" rows="6" required></textarea>
                                </div>
                                <input type="text" value="<%= RFC %>" name="RFC" id="RFC" style="display: none;">
                                <input type="number" name="Id" id="Id" value="<%= idCuenta %>" style="display: none;">
                            </div>
                            <br>
                            <button type="submit" class="btn btn-danger">Guardar</button>
                        </form>

                        <script>
                            // Función para obtener la fecha y hora formateada
                            function getFormattedDate() {
                                const now = new Date();
                                const year = now.getFullYear();
                                const month = String(now.getMonth() + 1).padStart(2, '0');
                                const day = String(now.getDate()).padStart(2, '0');
                                const hours = String(now.getHours()).padStart(2, '0');
                                const minutes = String(now.getMinutes()).padStart(2, '0');
                                const seconds = String(now.getSeconds()).padStart(2, '0');
                                return `${year}-${month}-${day} ${hours}:${minutes}:${seconds}`;
                            }

                            // Evento al enviar el formulario
                            document.getElementById('form-incobrabilidad').addEventListener('submit', function (event) {
                                event.preventDefault(); // Evitar que el formulario se envíe de forma convencional

                                // Obtener el formulario y los datos
                                const formData = new FormData(this);

                                // Agregar fechaHoraPlazos con la fecha y hora actual
                                formData.append('FechaRegistro', getFormattedDate());

                                // Realizar la solicitud fetch
                                fetch('/sere/Incobrabilidad?IDCuenta=<%= idCuenta %>', {
                                    method: 'POST',
                                    body: formData
                                })
                                    .then(response => {
                                        if (!response.ok) {
                                            throw new Error('Error en la solicitud');
                                        }
                                        return response.json(); // o response.text(), dependiendo de la respuesta del servidor
                                    })
                                    .then(data => {
                                        // Limpiar los campos de Formato y ComentariosFormato
                                        document.getElementById('Formato').value = '';
                                        document.getElementById('ComentariosFormato').value = '';
                                        mostrarFormato();
                                    })
                                    .catch(error => {
                                        console.error('Error:', error);
                                        // Manejar errores si es necesario
                                    });
                            });
                        </script><br>
                        <% } %>
                            <div id="lista-incobrabilidad" class="text-center">
                                <!-- AQUI IRAN LAS INCOBRABILIDADES -->
                            </div>
                            <script>
                                function mostrarFormato() {
                                    fetch('/sere/ObtenerIncobrabilidad?IDCuenta=<%= idCuenta %>')
                                        .then(response => response.json())
                                        .then(data => {
                                            const listaFormato = document.getElementById('lista-incobrabilidad');
                                            listaFormato.innerHTML = ''; // Limpiar la lista antes de agregar nuevos elementos

                                            if (data.resultados.length === 0) {
                                                const mensaje = document.createElement('p');
                                                mensaje.textContent = 'No hay datos recuperados para esta cuenta aún.';
                                                listaFormato.appendChild(mensaje);
                                            } else {
                                                const table = document.createElement('table');
                                                table.classList.add('table', 'table-striped', 'container');
                                                table.innerHTML = `
                                <thead class="thead-dark">
                                    <tr class="table-dark">
                                        <th>USUARIO QUE CAPTURA</th>
                                        <th>FORMATO INCOBRABILIDAD</th>
                                        <th>COMENTARIOS</th>
                                        <th>FECHA DE CAPTURA</th>
                                    </tr>
                                </thead>
                                <tbody>
                            `;

                                                data.resultados.forEach(formato => {
                                                    table.innerHTML += `
                                    <tr>
                                        <td>${formato.RFCDespacho.substring(0, 4)}</td>
                                        <td><a href="${formato.FormatoIncobrabilidad}" target="_blank"><i class="bi bi-file-earmark-post bi-lg"></i></a></td>
                                        <td style=" word-break: break-word; white-space: normal;">${formato.Comentarios}</td>
                                        <td>${formato.FechaRegistro}</td>
                                    </tr>
                                `;
                                                });
                                                table.innerHTML += `
                                </tbody>
                            `;

                                                listaFormato.appendChild(table);
                                            }
                                        });
                                }
                                mostrarFormato();
                            </script>

                            <% } else { %>
                                <div style="padding-left: 3rem; padding-right: 3rem;">
                                    <%- include('partials/NavSereGestion') %>
                                </div>
                                <div class="col-md-12">
                                    <h2>INFORMACIÓN FINANCIERA Y LEGAL</h2>
                                    <hr>
                                    <%- include('partials/DatosDeudorGestionCaso') %>
