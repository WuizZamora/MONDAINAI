<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="icon" type="image/x-icon" href="/images/ico.ico">
</head>

<body>
    <div id="header"></div>
    <div class="container text-center">
        <%- include('partials/NavSere') %>
            <h2>Datos de la Cuenta</h2>
            <table class="table table-striped table-bordered table-hover table-sm">
                <thead class="thead-dark">
                    <tr class="table-dark">
                        <th># Cuenta</th>
                        <th># Cliente Padre</th>
                        <th># Cliente Hijo</th>
                        <th>RFC Cliente</th>
                        <th>Tipo de Caso</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(item) { %>
                        <tr>
                            <td>
                                <%= item.IDCuenta %>
                            </td>
                            <td>
                                <%= item.NoClientePadre %>
                            </td>
                            <td>
                                <%= item.NoClienteHijo %>
                            </td>
                            <td>
                                <%= item.RFCUsuario %>
                            </td>
                            <td>
                                <select class="form-select tipo-de-caso" data-id="<%= item.IDCuenta %>">
                                    <option disabled selected value=""></option>
                                    <option value="Judicial" <%=item.TipoDeCaso==='Judicial' ? 'selected' : '' %>
                                        >Judicial
                                    </option>
                                    <option value="Extra Judicial" <%=item.TipoDeCaso==='Extra Judicial' ? 'selected'
                                        : '' %>
                                        >Extra Judicial</option>
                                    <option value="Cuenta Incobrable" <%=item.TipoDeCaso==='Cuenta Incobrable'
                                        ? 'selected' : '' %>
                                        >Cuenta Incobrable</option>
                                </select>
                            </td>
                            <td>
                                <button class="btn btn-danger actualizar-caso"
                                    data-id="<%= item.IDCuenta %>">Actualizar</button>
                            </td>
                        </tr>

                </tbody>
            </table>
            <h2>COTIZACIÓN</h2>
            <form action="/sere/cotizacion?IDCuenta=<%= item.IDCuenta %>" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6" style="display: none;">
                        <div class="mb-3">
                            <select class="form-select tipo-de-caso" data-id="<%= item.IDCuenta %>" name="TipoDeCaso"
                                id="TipoDeCaso">
                                <option disabled selected value=""></option>
                                <option value="Judicial" <%=item.TipoDeCaso==='Judicial' ? 'selected' : '' %>>Judicial
                                </option>
                                <option value="Extra Judicial" <%=item.TipoDeCaso==='Extra Judicial' ? 'selected' : ''
                                    %>
                                    >ExtraJudicial</option>
                                <option value="Cuenta Incobrable" <%=item.TipoDeCaso==='Cuenta Incobrable' ? 'selected'
                                    : '' %>
                                    >Cuenta Incobrable</option>
                            </select>
                        </div>
                    </div>
                    <% }); %>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label" for="Comentarios">Diagnostico del caso: </label>
                                <textarea name="Comentarios" id="Comentarios" rows="5" class="form-control"
                                    maxlength="1000" required></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label" for="Cotizacion">Adjunta Cotización: </label>
                                <input type="file" name="Cotizacion" id="Cotizacion" class="form-control" required>
                                <small id="fileHelp" class="form-text text-muted">Por favor, adjunta un archivo PDF o
                                    imagen.</small>
                            </div>
                        </div>

                        <div class="col-md-3" style="display: none;">
                            <div class="mb-3">
                                <label for="fechaCotizacion" class="form-label">Fecha de cotizacion:</label>
                                <input type="date" name="fechaCotizacion" id="fechaCotizacion"
                                    class="form-control text-center" required>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="validacion" class="form-label">Estado de Validación:</label>
                                <select id="validacion" name="validacion" class="form-select">
                                    <option disabled selected value=""></option>
                                    <option value="0">No validada</option>
                                    <option value="1">Validada</option>
                                </select>
                            </div>
                        </div>
                </div>
                <button type="submit" class="btn btn-danger">Enviar</button>
    </div>

    </form>
    </div><br>
    <div id="footer"></div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(function () {
            $("#header").load("/header");
            $("#footer").load("/footer");
        });
    </script>
    <script>
        document.querySelectorAll('.actualizar-caso').forEach(button => {
            button.addEventListener('click', function () {
                const idCuenta = this.getAttribute('data-id');
                const tipoDeCaso = document.querySelector(`.tipo-de-caso[data-id="${idCuenta}"]`).value;

                fetch(`/sere/actualizar-caso`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ idCuenta, tipoDeCaso })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Tipo de caso actualizado correctamente');
                            location.reload(); // Esto recarga la página actual
                        }
                        else {
                            alert('Hubo un error al actualizar el tipo de caso');
                        }
                    });
            });
        });
        document.addEventListener('DOMContentLoaded', (event) => {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('fechaCotizacion').value = today;
        });
    </script>
</body>

</html>