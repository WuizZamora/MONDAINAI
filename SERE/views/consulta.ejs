<!-- views/consulta.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Información general</title>
  <!-- Enlace al archivo CSS de Bootstrap desde CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <div class="container text-center">
    <h1>INFORMACIÓN GENERAL DEL CLIENTE</h1>
    <!-- Tabla generada dinámicamente con EJS -->
    <table class="table table-striped">
      <thead>
        <tr>
        <th>ID CUENTA</th>
          <th>RFC</th>
          <th>No Cliente Padre</th>
          <th>No Cliente Hijo</th>
          <th>Razón Social</th>
          <th>Domicilio Fiscal</th>
        </tr>
      </thead>
      <tbody>
        <% results.forEach(function(result) { %>
          <tr>
            <td><%=result.IDCuenta%></td>
            <td><%= result.Rfc %></td>
            <td><%= result.NoClientePadre %></td>
            <td><%= result.NoClienteHijo %></td>
            <td><%= result.RazonSocial %></td>
            <td><%= result.DomicilioFiscalPFAE %>
              <%= result.DomicilioFiscalPM %>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
