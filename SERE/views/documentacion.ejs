<!-- views/variablesRiesgo.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Documentación</title>
  <!-- Enlace al archivo CSS de Bootstrap desde CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <div class="container text-center">
    <h1>DOCUMENTACIÓN ADJUNTA DEL CLIENTE</h1>
    <!-- Tabla generada dinámicamente con EJS -->
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID CUENTA</th>
          <th>Documentación Legal</th>
          <th>Documentación Daños Reclamados</th>
          <th>Documentación Soporte Actitud Deudor</th>
          <th>Buro Del Cliente</th>
          <th>Estado De Cuenta File</th>
          <th>Archivo Extra</th>
        </tr>
      </thead>
      <tbody>
        <% results.forEach(function(result) { %>
          <tr>
            <td><%= result.IDCuenta %></td>
            <td><a href="/sere/<%= result.RutaDocumentacionLegal %>" target="_blank">Ver</a></td>
            <td><a href="/sere/<%= result.RutaDocumentacionDañosReclamados %>" target="_blank">Ver</a></td>
            <td><a href="/sere/<%= result.RutaDocumentacionSoporteActitudDeudor %>" target="_blank">Ver</a></td>
            <td><a href="/sere/<%= result.RutaBuroDelCliente %>" target="_blank">Ver</a></td>
            <td><a href="/sere/<%= result.RutaEstadoDeCuentaFile %>" target="_blank">Ver</a></td>
            <td><a href="/sere/<%= result.RutaArchivoExtra %>" target="_blank">Ver</a></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>